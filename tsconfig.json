{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "typeRoots": ["node_modules/misty2-js/dist/types"],
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./dist/types",
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
